@model IEnumerable<SOFT331.ViewModels.TimetableIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Train)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdvancedTickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StationTimetables)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.Date)
        </td>
        <td>
            @Html.DisplayFor(model => item.Train.Name)
        </td>
        <td>
            @Html.DisplayFor(model => item.Seats)
        </td>
        <td>
            @Html.DisplayFor(model => item.AdvancedTickets)
        </td>
        <td>
            @item.StationTimetables.Count()
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
